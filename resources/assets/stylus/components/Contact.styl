.form-control
	border-radius: 2px
	background: none
	color: white
.contenidoInterno__Formulario__selectorTipoProducto,.contenidoInterno__Formulario__selectorTipoCliente
	display: flex
	align-items: center
	color: #909090
	justify-content: space-around
	font-weight: 500
	margin: 2rem 0
	input[type="checkbox"], input[type="radio"]
		display none
		& + span
			border #fff 1px solid
			border-radius 10px
			cursor pointer
			padding 0.5rem 1rem
	:checked
		& + span
			color: $verdePrincipal
			background #FFF
			transition: all 1s

.customFadeIn
	animation-name fade-in-up
.TipoCliente
	overflow hidden
.BotonesContactos
	display: flex
	align-items: center
	justify-content: center

.BotonContacto
	display: flex
	flex-direction: column
	align-items: center
	justify-content: center
	margin-left: 1rem
	text-align: center
	font-size: smaller
.Boton_Icono
	width: 3rem
.BotonesContactos
	margin-bottom: 2rem


